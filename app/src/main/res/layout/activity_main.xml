<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBlue"
    tools:context="com.example.partymaker.ui.features.core.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/primaryBlue"
        android:orientation="vertical">

        <!-- Modern Search Bar -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.PartyMaker.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/search"
                    android:src="@drawable/ic_search"
                    app:tint="@color/gray" />

                <TextView
                    android:id="@+id/search_hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/search_your_parties"
                    android:textAppearance="@style/TextAppearance.PartyMaker.BodyLarge"
                    android:textColor="@color/gray"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/voice_search"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/voice_search"
                    android:src="@drawable/ic_mic"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@color/primaryBlue" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lv1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/primaryBlue"
                    android:clipToPadding="false"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            <TextView
                android:id="@+id/emptyGroupsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/no_groups_found"
                android:textSize="18sp"
                android:visibility="gone" />

            <!-- Loading overlay with Lottie animation -->
            <LinearLayout
                android:id="@+id/loading_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primaryBlue"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                android:alpha="0.95">

                <!-- Lottie Animation View -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_loading"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    tools:ignore="MissingClass" />

                <!-- Loading text -->
                <TextView
                    android:id="@+id/loading_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/loading_your_parties"
                    android:textAppearance="@style/TextAppearance.PartyMaker.BodyLarge"
                    android:textColor="@color/white" />

            </LinearLayout>

            <!-- Fallback ProgressBar (hidden when Lottie is used) -->
            <ProgressBar
                android:id="@+id/progress_bar_fallback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Bottom Navigation -->
        <include layout="@layout/helper_bottom_navigation" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChat"
        style="@style/Widget.PartyMaker.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:layout_marginBottom="100dp"
        android:contentDescription="@string/chat_with_ai_assistant"
        android:src="@drawable/ic_chat"
        app:fabSize="normal"
        app:elevation="6dp"
        tools:ignore="ImageContrastCheck" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
