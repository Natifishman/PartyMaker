<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_light_gradient"
    android:fitsSystemWindows="true"
    tools:context="com.example.partymaker.ui.features.core.MainActivity">

    <!-- Modern Search Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_bar_card"
        style="@style/Widget.PartyMaker.CardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="2dp"
        app:cardCornerRadius="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@string/search"
                android:src="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/gray" />

            <EditText
                android:id="@+id/etSearchGroups"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:autofillHints=""
                android:background="@android:color/transparent"
                android:hint="@string/search_your_parties"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.PartyMaker.BodyLarge"
                android:textColor="@color/textPrimary"
                android:textColorHint="@color/gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/clearSearch"
                app:layout_constraintStart_toEndOf="@id/search_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/clearSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/clear_search"
                android:focusable="true"
                android:src="@drawable/ic_close"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/filter_button"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/gray" />

            <ImageView
                android:id="@+id/filter_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/filter_sort"
                android:focusable="true"
                android:src="@drawable/ic_filter_list"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/primaryBlue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content Area with SwipeRefresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar_card">
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:scrollbars="vertical"
            android:overScrollMode="never" />
            
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Shimmer Loading Effect (Using ViewStub for performance) -->
    <ViewStub
        android:id="@+id/stub_shimmer_loading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout="@layout/layout_loading_shimmer"
        android:inflatedId="@+id/shimmer_view_container"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar_card" />

    <!-- Empty State (Using ViewStub for performance) -->
    <ViewStub
        android:id="@+id/stub_empty_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout="@layout/layout_empty_groups"
        android:inflatedId="@+id/empty_groups_layout"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar_card" />

    <!-- Loading overlay with Lottie animation (Using ViewStub) -->
    <ViewStub
        android:id="@+id/stub_loading_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout="@layout/loading_overlay"
        android:inflatedId="@+id/loading_overlay"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar_card" />

    <!-- Fallback ProgressBar (Using ViewStub) -->
    <ViewStub
        android:id="@+id/stub_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout="@layout/progress_bar_fallback"
        android:inflatedId="@+id/progress_bar_fallback"
        app:layout_constraintBottom_toBottomOf="@id/swipeRefreshLayout"
        app:layout_constraintEnd_toEndOf="@id/swipeRefreshLayout"
        app:layout_constraintStart_toStartOf="@id/swipeRefreshLayout"
        app:layout_constraintTop_toTopOf="@id/swipeRefreshLayout" />

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/component_bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChat"
        style="@style/Widget.PartyMaker.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="@string/chat_with_ai_assistant"
        android:src="@drawable/ic_chat"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        tools:ignore="ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
