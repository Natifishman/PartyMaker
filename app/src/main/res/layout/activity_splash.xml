<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.partymaker.Splash"
    android:background="@drawable/splash_gradient_background">

    <!-- Container for the logo and text -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Logo with shadow and animation -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/logo"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cake00" />

        <!-- App name text -->
        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/partymaker"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.1"
            android:elevation="4dp"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/make_every_party_unforgettable"
            android:textSize="16sp"
            android:textColor="#E0FFFFFF"
            android:letterSpacing="0.05"
            android:elevation="4dp" />

    </LinearLayout>

    <!-- Animated dots for loading indication -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:id="@+id/dot1"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:background="@drawable/loading_dot"
            android:alpha="0.5" />

        <View
            android:id="@+id/dot2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:background="@drawable/loading_dot"
            android:alpha="0.7" />

        <View
            android:id="@+id/dot3"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_margin="4dp"
            android:background="@drawable/loading_dot"
            android:alpha="1.0" />

    </LinearLayout>

    <!-- Version info at bottom -->
    <TextView
        android:id="@+id/txtVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="@string/version_1_0"
        android:textSize="12sp"
        android:textColor="#80FFFFFF"
        android:alpha="0.8" />

</RelativeLayout>