<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Placeholder for map - we'll remove the fragment to avoid issues -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/map_will_open"
        android:textColor="#666666"
        android:textSize="18sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <Button
            android:id="@+id/btnCloseMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:drawableStartCompat="@android:drawable/ic_menu_close_clear_cancel"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="@string/close_map"
            android:textColor="#1986ed" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <Button
            android:id="@+id/btnOpenGoogleMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:drawableStartCompat="@android:drawable/ic_menu_directions"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="@string/open_in_google_maps"
            android:textColor="#1986ed" />
    </androidx.cardview.widget.CardView>

</RelativeLayout> 