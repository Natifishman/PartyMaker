<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- White background -->
    <solid android:color="#FFFFFF" />

    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Some inner spacing -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
