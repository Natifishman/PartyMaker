<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Light background -->
    <solid android:color="#0081d1" />

    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#0081d1" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Some inner spacing -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>