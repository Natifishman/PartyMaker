
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- רקע בהיר -->
    <solid android:color="#FFFFFF" />

    <!-- גבול עדין -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- פינות מעוגלות -->
    <corners android:radius="12dp" />

    <!-- מעט רווח פנימי -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>