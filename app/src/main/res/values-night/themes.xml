<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark Mode Theme for PartyMaker -->
    <style name="Theme.PartyMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors for dark mode -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">#004A77</item>
        <item name="colorOnPrimaryContainer">#CFE5FF</item>

        <!-- Secondary colors for dark mode -->
        <item name="colorSecondary">#ABC9EB</item>
        <item name="colorOnSecondary">#13314E</item>
        <item name="colorSecondaryContainer">#2B4965</item>
        <item name="colorOnSecondaryContainer">#CFE5FF</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/modern_accent_teal</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorTertiaryContainer">#005662</item>
        <item name="colorOnTertiaryContainer">#70F3FF</item>

        <!-- Error colors -->
        <item name="colorError">#FFB4AB</item>
        <item name="colorOnError">#690005</item>
        <item name="colorErrorContainer">#93000A</item>
        <item name="colorOnErrorContainer">#FFDAD6</item>

        <!-- Background - very dark -->
        <item name="android:colorBackground">#0A0A0A</item>
        <item name="colorOnBackground">#E1E1E1</item>

        <!-- Surface - dark gray -->
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">#E1E1E1</item>
        <item name="colorSurfaceVariant">#1E1E1E</item>
        <item name="colorOnSurfaceVariant">#B0B0B0</item>

        <!-- Outlines -->
        <item name="colorOutline">#89919C</item>
        <item name="colorOutlineVariant">#404751</item>

        <!-- Material 3 specific attributes -->
        <item name="android:colorControlHighlight">@color/ripple_primary</item>

        <!-- Enhanced elevation and corner radius for Material You -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.Corner.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.Corner.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.Corner.Large</item>

        <!-- Surface container colors for Material 3 Dark Mode -->
        <item name="colorSurfaceContainerLowest">#050505</item>
        <item name="colorSurfaceContainerLow">#0F0F0F</item>
        <item name="colorSurfaceContainer">#151515</item>
        <item name="colorSurfaceContainerHigh">#1E1E1E</item>
        <item name="colorSurfaceContainerHighest">#282828</item>
        
        <!-- Status bar and navigation bar colors -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

