<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/pink_100</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Other theme attributes -->
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!-- Theme with no action bar for activities with custom toolbar -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom style for AutocompleteSupportFragment to improve readability -->
    <style name="AutocompleteStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_medium</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
