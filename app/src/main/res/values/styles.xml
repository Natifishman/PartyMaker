<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/pink_100</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Other theme attributes -->
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!-- Material theme for login page -->
    <style name="MaterialAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/pink_100</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Other theme attributes -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="materialButtonStyle">@style/MaterialAppTheme.Button</item>
        <item name="textInputStyle">@style/MaterialAppTheme.TextInputLayout</item>
    </style>

    <!-- Button Style -->
    <style name="MaterialAppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/pink_200</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <!-- Text Button Style -->
    <style name="MaterialAppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="rippleColor">@color/pink_100</item>
    </style>

    <!-- Input Field Style -->
    <style name="MaterialAppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <!-- Checkbox Style -->
    <style name="MaterialAppTheme.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/colorAccent</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.MaterialAppTheme.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialAppTheme.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MaterialAppTheme.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>