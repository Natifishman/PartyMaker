<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material You Card Styles -->
    <style name="Widget.PartyMaker.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="rippleColor">@color/primaryBlue</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:stateListAnimator">@animator/material3_card_state_list_animator</item>
    </style>
    
    <style name="Widget.PartyMaker.CardView.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceContainerHighest</item>
        <item name="cardForegroundColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="Widget.PartyMaker.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>
    
    <!-- Material You Button Styles -->
    <style name="Widget.PartyMaker.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
    </style>
    
    <style name="Widget.PartyMaker.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">20dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
    </style>
    
    <style name="Widget.PartyMaker.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    
    <style name="Widget.PartyMaker.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>
    
    <!-- Material You FAB Styles -->
    <style name="Widget.PartyMaker.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="backgroundTint">@color/modern_accent_teal</item>
        <item name="tint">@color/white</item>
        <item name="elevation">6dp</item>
        <item name="hoveredFocusedTranslationZ">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>
    
    <style name="Widget.PartyMaker.FloatingActionButton.Large" parent="Widget.Material3.FloatingActionButton.Large.Primary">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>
        <item name="backgroundTint">?attr/colorTertiaryContainer</item>
        <item name="tint">?attr/colorOnTertiaryContainer</item>
    </style>
    
    <!-- Material You Text Input Styles -->
    <style name="Widget.PartyMaker.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
    </style>
    
    <style name="Widget.PartyMaker.TextInputLayout.Filled" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxBackgroundColor">?attr/colorSurfaceContainerHighest</item>
    </style>
    
    <!-- Material You Chip Styles -->
    <style name="Widget.PartyMaker.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="checkedIconVisible">true</item>
    </style>
    
    <style name="Widget.PartyMaker.Chip.Action" parent="Widget.Material3.Chip.Assist">
        <item name="chipCornerRadius">16dp</item>
        <item name="chipBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="chipIconTint">?attr/colorOnSecondaryContainer</item>
    </style>
    
    <!-- Modern Typography Styles -->
    <style name="TextAppearance.PartyMaker.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
    
    <style name="TextAppearance.PartyMaker.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.PartyMaker.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.PartyMaker.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.PartyMaker.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    
    <style name="TextAppearance.PartyMaker.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.PartyMaker.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.PartyMaker.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.PartyMaker.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <!-- Circle Image Style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Material Button Style -->
    <style name="Widget.PartyMaker.MaterialButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="elevation">4dp</item>
    </style>
    
    <!-- Additional Typography Styles for Enterprise UI -->
    <style name="TextAppearance.PartyMaker.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.PartyMaker.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="TextAppearance.PartyMaker.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <!-- Chip Styles -->
    <style name="Widget.PartyMaker.Chip.Choice" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">20dp</item>
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>
    
    <!-- Navigation styles removed due to compatibility issues -->
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.PartyMaker.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Material3.LabelMedium</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.Material3.LabelMedium</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">8dp</item>
    </style>
    
    <style name="Widget.PartyMaker.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorSecondaryContainer</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>
    
    <!-- Dialog Styles -->
    <style name="ThemeOverlay.PartyMaker.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorSurface">?attr/colorSurfaceContainerHigh</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>
    </style>
    
    <!-- Modern Bottom Sheet Style -->
    <style name="ThemeOverlay.PartyMaker.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.PartyMaker.BottomSheet.Modal</item>
        <item name="colorSurface">?attr/colorSurfaceContainer</item>
    </style>
    
    <style name="Widget.PartyMaker.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.PartyMaker.BottomSheet</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.PartyMaker.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>